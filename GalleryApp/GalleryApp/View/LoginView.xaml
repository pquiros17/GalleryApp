                       HeightRequest="45"
                       Text="{Binding User}"
                       BackgroundColor="Transparent"/>
                <!--Password Texbox-->
                <Entry Placeholder="Contrasena" 
                       PlaceholderColor="#9b9b9b" 
                       IsPassword="true"
                       TextColor="#9b9b9b"
                       HeightRequest="45"
                       Text="{Binding Password}"
                       BackgroundColor="Transparent"/>
                <!--Login Button-->
